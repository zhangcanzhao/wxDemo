/* pages/book/book.wxss */
.topTab{
  height:100rpx;
  background:#fff;
  box-shadow: inset 0rpx 0rpx 40rpx #f2f2f2;
  white-space: nowrap;
  padding-top:20rpx;
}
.topTab-scroll-box{
  height:80rpx;
  margin-left:20rpx;
  display:inline-block;
  line-height:80rpx;
  font-size:30rpx;
  padding:0 20rpx;
  border-radius: 10rpx;
  border: solid 3rpx #333;
}
.topTab-scroll-box-active{
   background:#11cd6e;
   border: none;
   color:#fff;
}
.scrollBox{
  width:100%;
  height:calc(100vh - 120rpx);
  background:#fff;
}
.bookItem{
  width:100%;
  height:300rpx;
  border-bottom:solid 3rpx #ccc;
  padding:20rpx;
}
.bookImg{
  width:230rpx;
  height:300rpx;
  float:left;
}
.bookRight{
  margin-left:250rpx;
  height:300rpx;
}
.title{
  font-size:40rpx;
  font-weight: bold;
  height:80rpx;
  line-height:80rpx;
}
.catalog{
  font-size:30rpx;
  height:50rpx;
  line-height:50rpx;
}
.redColor{
  color:red;
}
.text{
  height:120rpx;
  overflow: hidden;
  color:#ccc;
  width:calc(100% - 40rpx);
  font-size:30rpx;
  line-height:40rpx;
}